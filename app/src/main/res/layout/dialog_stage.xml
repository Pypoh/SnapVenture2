<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/rounded_dialog"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/dialog_stage_level_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="level_name"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="16dp"
        android:id="@+id/dialog_stage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/dialog_stage_btn_start"
        android:layout_width="match_parent"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_full_white_border"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Start"/>

</LinearLayout>