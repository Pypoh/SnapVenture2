<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dummy_line"
        android:layout_width="64dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <View
            android:id="@+id/status_line"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_stage_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="stage_number"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/street_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/underline_dialog_item"
        app:layout_constraintLeft_toRightOf="@id/dummy_line"/>

    <ImageView
        android:id="@+id/star_dialog_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/star_dialog_2"

        />

    <ImageView
        android:id="@+id/star_dialog_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/star_dialog_3"
        />

    <ImageView
        android:id="@+id/star_dialog_3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:layout_marginLeft="16dp"
        android:id="@+id/underline_dialog_item"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dummy_line"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>