<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="288dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/image_mode"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/play_snap"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="W,1:1"
                />

            <TextView
                android:id="@+id/text_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game_Mode"
                app:layout_constraintTop_toBottomOf="@id/image_mode"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:layout_marginRight="32dp"
                android:textColor="@color/street_black"
                android:layout_marginLeft="32dp"/>

            <TextView
                android:id="@+id/text_mode_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game_Mode description isinya contoh dari tadi"
                app:layout_constraintTop_toBottomOf="@id/text_mode"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>