<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/_text_dialog_stage_stage_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stage_number"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/underline_dialog_item"/>

    <ImageView
        android:id="@+id/star_dialog_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"
        android:layout_marginRight="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/star_dialog_2"

        />

    <ImageView
        android:id="@+id/star_dialog_2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"
        android:layout_marginRight="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/star_dialog_3"
        />

    <ImageView
        android:id="@+id/star_dialog_3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/stage_star_off"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/underline_dialog_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/_text_dialog_stage_stage_number"/>


</androidx.constraintlayout.widget.ConstraintLayout>