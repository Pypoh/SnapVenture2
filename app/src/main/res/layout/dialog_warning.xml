<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_result_top_layout_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/result_dialog_top_15"
        android:paddingBottom="32dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="PERHATIAN!"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="160dp"

            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi merupakan prototype yang dioptimalkan untuk penggunaan pada android versi lollipop ke atas dengan layar 6 inchi. Segala bentuk konten dalam aplikasi hanya contoh. Dapat terjadi beberapa kesalahan sistem dikarenakan aplikasi yang masih dalam tahap alpha. Aplikasi tetap membutuhkan koneksi internet untuk hasil deteksi maksimal."
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@id/text_result"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_warning_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_result_top_layout_success"
        android:text="Mengerti"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:paddingTop="20dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:background="@drawable/result_dialog_bottom_15" />

</LinearLayout>