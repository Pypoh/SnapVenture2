<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Auth.Auth">

    <ImageView
        android:id="@+id/auth_logo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/auth_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/rounded_button_full"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintTop_toBottomOf="@id/auth_logo"/>

    <TextView
        android:id="@+id/auth_regist_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/auth_login_button"
        android:text="doesn't have an account?"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints" />
    
    <Button
        android:id="@+id/auth_regist_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/rounded_button_full"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintTop_toBottomOf="@id/auth_regist_text"/>

    <TextView
        android:id="@+id/auth_guest_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/auth_regist_button"
        android:text="------------or------------"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/auth_guest_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play as Guest"
        android:background="@drawable/rounded_button_full"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="16dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        app:layout_constraintTop_toBottomOf="@id/auth_guest_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>